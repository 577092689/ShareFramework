<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <com.ray.balloon.widget.NavigationBar
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/center_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@color/main"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_myorder"
                style="@style/mine_rl" >

                <TextView
                    style="@style/mine_text"
                    android:text="@string/mine_hint1" />
            </RelativeLayout>

            <View style="@style/mine_divider" />

            <RelativeLayout
                android:id="@+id/rl_about"
                style="@style/mine_rl" >

                <TextView
                    style="@style/mine_text"
                    android:text="@string/mine_hint4" />
            </RelativeLayout>

            <View style="@style/mine_divider" />

            <RelativeLayout
                android:id="@+id/rl_pwd"
                style="@style/mine_rl" >

                <TextView
                    style="@style/mine_text"
                    android:text="@string/mine_hint2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_advise"
                style="@style/mine_rl"
                android:layout_marginTop="8dp" >

                <TextView
                    style="@style/mine_text"
                    android:text="@string/mine_hint3" />
            </RelativeLayout>

            <View style="@style/mine_divider" />

            <RelativeLayout
                android:id="@+id/rl_update"
                style="@style/mine_rl"
                android:visibility="gone">

                <TextView
                    style="@style/mine_text"
                    android:text="@string/mine_hint5" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>