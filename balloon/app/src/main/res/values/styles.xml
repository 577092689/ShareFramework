<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="carbon_Theme.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/carbon_cyan_400</item>
        <item name="colorPrimaryDark">@color/carbon_cyan_a200</item>
        <item name="colorAccent">#ffFF4081</item>
        <item name="carbon_colorError">@color/carbon_amber_400</item>
    </style>

    <style name="RaisedButtonStyle" parent="AppTheme">
        <item name="colorPrimary">#ff9C27B0</item>
        <item name="colorAccent">#ffFF5252</item>
        <item name="carbon_rippleColor">#42ffffff</item>
    </style>

    <style name="AppTheme.Debug">
        <item name="carbon_debugMode">true</item>
    </style>

    <style name="calcButtonStyle" parent="carbon_Button.Flat">
        <item name="carbon_rippleColor">#42ffffff</item>
        <item name="carbon_rippleStyle">borderless</item>
        <item name="carbon_rippleHotspot">false</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">30sp</item>
        <item name="carbon_fontPath">"carbon/Roboto-Light.ttf"</item>
    </style>

    <style name="calcButtonStyle2" parent="calcButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="carbon_fontPath">"carbon/Roboto-Regular.ttf"</item>
    </style>

    <style name="AppThemeTrans" parent="AppTheme">
        <item name="colorPrimary">#ff213C6B</item>
        <item name="colorPrimaryDark">#ff162949</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/Trans</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="menu_item_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="menu_item_iv">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <!--<style name="menu_item_tv">-->
    <!--<item name="android:layout_width">wrap_content</item>-->
    <!--<item name="android:layout_height">wrap_content</item>-->
    <!--<item name="android:textSize">12sp</item>-->
    <!--<item name="android:gravity">center</item>-->
    <!--<item name="android:textColor">@drawable/tab_text_color</item>-->
    <!--</style>-->

    <style name="main_category">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_category_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#666</item>
    </style>

    <style name="main_category_text_circle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/main_category_bg1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="mine_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">#FFF</item>
    </style>

    <style name="mine_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/serach_border</item>
    </style>

    <style name="mine_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableRight">@drawable/general_back_icon_revert</item>
    </style>

    <style name="btn_common_style_pll">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="pw_style">
        <item name="android:windowEnterAnimation">@anim/in</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>

    <style name="Item" parent="">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Item.Small">
        <item name="android:layout_width">@dimen/item_circle_size_small</item>
        <item name="android:layout_height">@dimen/item_circle_size_small</item>
        <item name="android:textSize">@dimen/item_font_size_small</item>
    </style>

    <style name="Item.Medium">
        <item name="android:layout_width">@dimen/item_circle_size_medium</item>
        <item name="android:layout_height">@dimen/item_circle_size_medium</item>
        <item name="android:textSize">@dimen/item_font_size_medium</item>
    </style>

    <style name="Item.Large">
        <item name="android:layout_width">@dimen/item_circle_size_large</item>
        <item name="android:layout_height">@dimen/item_circle_size_large</item>
        <item name="android:textSize">@dimen/item_font_size_large</item>
    </style>

    <style name="Item.Tumblr">
        <item name="android:layout_width">@dimen/item_circle_size_tumblr</item>
        <item name="android:layout_height">@dimen/item_circle_size_tumblr</item>
        <item name="android:textSize">@dimen/item_font_size_tumblr</item>
        <item name="android:textColor">@color/carbon_red_600</item>
    </style>

    <style name="Item.Path">
        <item name="android:layout_width">@dimen/item_circle_size_path</item>
        <item name="android:layout_height">@dimen/item_circle_size_path</item>
        <item name="android:textSize">@dimen/item_font_size_path</item>
        <item name="android:background">@drawable/path_white_oval</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
</resources>
